<!DOCTYPE html>
<html>
    <head>
        <title>Blogs</title>
        <link href="/Style.css" rel="stylesheet" type="text/css" />

    </head>
    <body>
        <%- include("./partials/nav.ejs") %>
        <h1>Blog's</h1>
        <div class="container">
            <% if (data.length == 0){ %>
                <h3>There is no article written</h3>
                <h4>create a new <a href='/new-blog'>aricle</a></h4>
            <% }else{ %>
                <% data.forEach(blog=>{ %>
                    <div class="row-blog">
                        <a href="blog/main/<%= blog.title %>"><h4><%= blog.title %></h4></a>
                    </div>
                <% }) %>
            <% } %>  
        </div>

    </body>
</html>
